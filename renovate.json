{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignoreDeps": ["css-tree"],
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "description": "Group Nuxt ecosystem packages",
      "groupName": "nuxt",
      "matchPackageNames": [
        "/^@nuxt//",
        "/^nuxt$/"
      ]
    },
    {
      "description": "Group Vue ecosystem packages",
      "groupName": "vue",
      "matchPackageNames": [
        "/^vue$/",
        "/^vue-router$/",
        "/^@vue//",
        "/^@pinia//",
        "/^@vueuse//"
      ]
    },
    {
      "description": "Group testing packages",
      "groupName": "testing",
      "matchPackageNames": [
        "/vitest/",
        "/playwright/",
        "/happy-dom/",
        "/@vue/test-utils/",
        "/@nuxt/test-utils/"
      ]
    },
    {
      "description": "Group linting packages",
      "groupName": "linting",
      "matchPackageNames": [
        "/eslint/",
        "/lint-staged/"
      ]
    },
    {
      "description": "Automerge non-major dev dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
